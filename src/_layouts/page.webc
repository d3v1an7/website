---
layout: base
---

<main
  id="content"
  class="wrapper padding-x padding-y width-reading flex-grow">
  <article class="full">
    <header class="mb-10">
      <h1
        webc:if="title"
        @text="title"></h1>
      <p
        webc:if="standfirst"
        class="standfirst"
        @text="standfirst"></p>
      <time-formatted :date="date"></time-formatted>
    </header>
    <hr />
    <template
      webc:nokeep
      @html="content"></template>
  </article>
</main>
